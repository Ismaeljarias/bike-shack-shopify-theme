{% comment %} 
Replace all hardcoded values with dynamic values from the product object 
  - Elements' id & remove button = product handle
  - Data points from product metafields
  - Thumbnail image 200x width filter
{% endcomment %}


<div class="compare-product-card" id="{{ product.handle }}">
  <div class="title-wrap">
    <h4>{{ product.title }}</h4>

    <button class="remove-product-button" data-removeproducthandle="{{ product.handle }}" aria-label="Remove product">
    
    </button>

  </div>
  <img src="{{ product.featured_image | image_url: width: 200 }}" alt="{{ product.title }}" width="auto" height="auto" />
  <p>Price: {{ product.price | money }}</p>
  <p>Rating: {{ product.metafields.custom.rating | default: 'N/A' }} ‚≠ê</p>
  <p>Frame: {{ product.metafields.custom.frame | default: 'N/A' }}</p>
  <p>Suspension: {{ product.metafields.custom.suspension | default: 'N/A' }}</p>
  <p>Brake: {{ product.metafields.custom.brake | default: 'N/A' }}</p>
  <p>Gears: {{ product.metafields.custom.gears | default: 'N/A' }}</p>
  <p><a class="link--text" href="{{ product.url }}">More Details</a></p>
</div>

{% schema %}
{
  "name": "compare product card",
  "settings": []
}
{% endschema %}
